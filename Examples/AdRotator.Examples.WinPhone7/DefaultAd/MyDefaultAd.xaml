<UserControl x:Class="AdRotator.Examples.WinPhone7.DefaultAd.MyDefaultAd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Tap="UserControl_Tap">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="AdRotatorImage.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="Click here to see more from AdRotator" VerticalAlignment="Bottom" Margin="0,10,10,0" Foreground="#FFFD0000" FontWeight="Bold"/>
    </Grid>
</UserControl>